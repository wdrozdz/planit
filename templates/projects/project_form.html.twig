{% extends 'base.html.twig' %}
{% block title %}Register{% endblock %}
{% block stylesheets %}
{% endblock %}
{% block body %}

    <style>
        .horizontal_navbar_wrapper {
            height: 100vh;
            width: 13%;
            justify-content: center;
            background-color: whitesmoke;
            position: relative;
            text-align: center;
        }

        .project-add-trigger {
            width: 100%;
        }

        .strap {
            height: 10px;
            width: 100%;
            margin-top: 0;
        }
        .small-strap {
            height: 3px;
            width: 35%;
        }
        .bottom-content-wrapper{
            position:absolute;
            bottom: 3vh;
            display: flex;
            justify-content: center;
            width:100%;
        }
    </style>

    <div class="horizontal_navbar_wrapper">
        <span class="badge badge-warning mt-0 strap"> </span>

        <h3 class="mt-3">{{ app.session.get('currentWorkspaceName') }}</h3>
        <span class="badge badge-warning mb-2 small-strap"> </span>
        <h6>{{ app.User.name }}</h6>

        <div class="text-center">
            <button type="button" class="btn btn-primary project-add-trigger mt-4 mb-3" data-toggle="modal"
                    data-target="#addModal">CREATE PROJECT
            </button>
            {{ render(controller("App\\Controller\\ProjectController::showAction")) }}
        </div>
        <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Create project</h5>
                    </div>
                    <div class="modal-body">
                        {{ form_start(form) }}
                        {{ form_row(form.project, { 'label': 'PROJECT' }) }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        {{ form_widget(form.create, { 'label': 'Create' , 'attr' : {'class' : 'btn btn-success'}}) }}
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
        <div class="bottom-content-wrapper">

            <div class="">
            <a href="/logout" class="text-center">Manage workspace</a><br>
            <a href="/logout">Account settings</a><br>
            <a href="/logout">Sign out</a><br>
            </div>
        </div>
    </div>


    {{ form(form) }}
{% endblock %}